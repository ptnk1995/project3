<%= form_for Comment.new, remote: true do |f| %>
  <div class="col-md-12" data-turbolinks-temporary>
    <div class="col-md-12">
    <div class="comment-from">
      </hr>
      <% if current_user.nil? %>
        <%= f.text_field :name, placeholder: t("comment_name"), 
          class: "form-control" %>
      <% else %>
        <%= f.hidden_field :name, value: current_user.name %>
      <% end %>
      </br>
      <%= f.text_area :content, placeholder: t("comment_content"), class: "form-control",
        id: "content"%>
      <%= f.hidden_field :id, value: @project.id %>
    </div>
    </div>
  </div>
<% end %>
