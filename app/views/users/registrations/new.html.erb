<div class="logmod">
  <div class="logmod__wrapper">
    <div class="logmod__container">
      <ul class="logmod__tabs">
        <li data-tabtar="lgm-1"><%= t("sign_up") %></li>
      </ul>
      <div class="logmod__tab-wrapper">
        <div class="logmod__tab lgm-1">
          <div class="logmod__form">
            <%= form_for resource, as: resource_name, class: "omb_loginForm",
              url: registration_path(resource_name, locale: I18n.locale) do |f| %>
              <%= devise_error_messages! %>
              <form accept-charset="utf-8" action="#" class="simform">
                <div class="sminputs">
                  <div class="input full">
                    <label class="string optional" for="user-name">
                      <%= t("user") %>
                    </label>
                    <%= f.text_field :name, autofocus: true, 
                      required: "required", class: "emailsignup", 
                      placeholder: (t "lg_field_name") %>
                  </div>
                  <div class="input full">
                    <label class="string optional" for="user-name">
                      <%= t("email") %></label>
                    <%= f.email_field :email, autofocus: true, 
                      required: "required",class: "emailsignup", 
                      placeholder: (t "lg_field_email") %>
                  </div>
                  <div class="sminputs">
                    <div class="input string optional">
                      <label class="string optional" for="user-name">
                        <%= t("user_name") %></label>
                      <%= f.text_field :user_name, autofocus: true, 
                        required: "required", class: "usernamesignup", 
                        placeholder: (t "rg_field_username") %>
                    </div>
                    <div class="input string optional">
                      <label class="string optional" for="user-name">
                        <%= t("user_position") %></label>
                      <%= f.text_field :position, autofocus: true, 
                        required: "required", class: "usernamesignup", 
                        placeholder: (t "rg_field_position") %>
                    </div>
                  </div>
                </div>
                <div class="sminputs">
                  <div class="input string optional">
                    <label class="string optional" for="user-pw">
                      <%= t("password") %></label>
                    <%= f.password_field :password, autocomplete: "off", 
                      required: "required", class: "passwordsignup", 
                      placeholder: (t "lg_field_pass") %>
                  </div>
                  <div class="input string optional">
                    <label class="string optional" for="user-pw-repeat">
                      <%= t("password_confirmation") %></label>
                    <%= f.password_field :password_confirmation, 
                      autocomplete: "off", required: "required",
                      class: "passwordsignup_confirm", 
                      placeholder: (t "lg_field_pass") %>
                  </div>
                </div>
                <div class="simform__actions">
                  <%= link_to "Back", root_path(locale: I18n.locale) %>
                  <%= f.submit t(:rg_signup), 
                    class: "sumbit", value: "Create account" %>
                  <span class="simform__actions-sidetext"><%= t("agree_account") %>
                    <a class="special" href="#" target="_blank" role="link">
                    <%= t("terms_privacy") %></a></span>
                </div> 
              </form>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
