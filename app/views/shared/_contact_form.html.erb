<!-- CONTACT -->
<section id="contact" class="padding-top-40">
  <div class="contact">
    <div class="row">
      <div class="col-md-12">
        <div class="section-title">
          <h1 class="font-family"><%= t("contact_us") %></h1>
          <span class="st-border"></span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4 contact-info wow fadeInLeft">
        <p class="contact-content"><%= t("contact_detail") %></p>
        <p class="st-address"><i class="fa fa-map-marker"></i><strong><%= t("contact_address") %></strong></p>
        <p class="st-phone"><i class="fa fa-mobile"></i><strong><%= Settings.contact_phone %></strong></p>
        <p class="st-email"><i class="fa fa-envelope-o"></i><strong><%= Settings.contact_mail %></strong></p>
        <p class="st-website"><i class="fa fa-globe"></i><strong><%= Settings.contact_domain %></strong></p>
      </div>
      <div class="col-sm-7 col-sm-offset-1">
        <%= form_for @contact do |f| %>
        <%= render "shared/error_messages", object: @contact %>
          <div class="row">
            <% if current_user.present? %>
              <div class="col-sm-6">
                <%= f.text_field :name, value: current_user.name, class: "form-control", placeholder: t("name") %>
              </div>
              <div class="col-sm-6">
                <%= f.email_field :email, value: current_user.email, class: "form-control", placeholder: t("email") %>
              </div>
            <% else %>
              <div class="col-sm-6">
                <%= f.text_field :name, class: "form-control", placeholder: t("name") %>
              </div>
              <div class="col-sm-6">
                <%= f.email_field :email, class: "form-control", placeholder: t("email") %>
              </div>
            <% end %>
            <div class="col-sm-12">
              <%= f.label :title %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="col-sm-12">
              <%= f.label :content %>
              <%= f.text_area :content, class: "form-control height-200-px" %>
            </div>
            <div class="col-sm-12">
              </br>
              <%= f.submit (t "send_message"), class: "btn btn-send" %>
            </div>
          </div>
        <% end %>
        </br>
        <div id="map"></div>
      </div>
    </div>
  </div>
</section>
<script src="<%= @key %>"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
<!-- /CONTACT -->
